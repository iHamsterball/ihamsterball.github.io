{% capture jbcache %}
  <!--
  - Dynamically set liquid variables for working with URLs/paths
  -->
  {% if site.hamster.setup.provider == "custom" %}
    {% include custom/setup %}
  {% else %}
    {% if site.safe and site.hamster.BASE_PATH and site.hamster.BASE_PATH != '' %}
      {% assign BASE_PATH = site.hamster.BASE_PATH %}
      {% assign HOME_PATH = site.hamster.BASE_PATH %}
    {% else %}
      {% assign BASE_PATH = nil %}
      {% assign HOME_PATH = "/" %}
    {% endif %}

    {% if site.hamster.ASSET_PATH %}
      {% assign ASSET_PATH = site.hamster.ASSET_PATH %}
    {% else %}
      {% capture ASSET_PATH %}{{ BASE_PATH }}/assets/themes/{{ page.theme.name }}{% endcapture %}
    {% endif %}  
  {% endif %}
{% endcapture %}{% assign jbcache = nil %}
